{
  "gitBaseURL": "https://www.github.com/",
  "os" : {
    "windows": {
      "user": "razva",
      "applications": [
        { "name": "neovim",
          "destination":  "%UserPath%/AppData/Local/nvim/",
          "gitRepo": "RShumy/nvim-config",
          "relativeRepoLocation" : "*"
        },
        { "name": "mingw" },
        { "name": "Lua" },
        { "name": "npm",
          "destination" : "%UserPath%",
          "gitRepo": "RShumy/dotfiles",
          "relativeRepoLocation": "./.npmrc"
        },
        { "name": "ssh",
          "justConfig": true,
          "destination": "C:/ProgramData/ssh",
          "gitRepo": "RShumy/dotfiles",
          "relativeRepoLocation": "./sshd_config"
        },
        { "name": "maven" }
      ],
      "fonts" : {
        "type" : "folder-fonts",
        "gitRepo": "RShumy/dotfiles",
        "relativeRepoLocation": ".local/share/fonts"
      }
  },
    "linux": {
      "user": "shumy",
      "applications" : [
        { "name": "neovim", 
          "destination": "$HOME/.config/nvim",
          "gitRepo": "RShumy/nvim-config",
          "relativeRepoLocation": "*"
        },
        { "name": "lua" },
        { "name": "zsh",
          "destination": "$HOME",
          "gitRepo": "RShumy/dotfiles",
          "relativeRepoLocation": "./.zshrc"
        },
        { "name": "zsh-syntax-highlighting" },
        { "name": "zsh_theme",
          "JustConfig": true,
          "destination": "$HOME/zsh_theme/shumy_theme",
          "gitRepo": "RShumy/dotfiles",
          "relativeRepoLocation": "./zsh_theme/"
        },
        { "name": "tmux",
          "destination": "$HOME",
          "gitRepo": "RShumy/dotfiles",
          "relativeRepoLocation": "./.tmux.conf"
        }
      ]
    }
  }
}